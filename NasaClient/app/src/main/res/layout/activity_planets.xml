<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <TextView
            android:id="@+id/titlePlanets"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"

            android:layout_marginBottom="16dp"
            android:text="Tài Liệu"
            android:textColor="@android:color/black"
            android:textSize="20sp"
            android:textStyle="bold"
            tools:ignore="HardcodedText" />
        <EditText
            android:id="@+id/etSearch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="1dp"
            android:layout_marginRight="15dp"
            android:background="@drawable/rounded_edittext"
            android:drawableStart="@drawable/ic_search"
            android:hint="Find the planet..."
            android:padding="16dp"
            android:layout_marginBottom="10dp"/>

        <!-- Earth Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="8dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/planetImage"
                    android:layout_width="380dp"
                    android:layout_height="180dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/tl_001"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintDimensionRatio="16:9"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.0" />

                <TextView
                    android:id="@+id/titleText"
                    android:layout_width="380dp"
                    android:layout_height="61dp"
                    android:padding="15dp"
                    android:text="Bảng chữ cái"
                    android:textColor="#FFFFFF"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <Button
                    android:id="@+id/earthExploreButton"
                    android:layout_width="150dp"
                    android:layout_height="50dp"
                    android:layout_margin="16dp"
                    android:layout_marginStart="4dp"
                    android:layout_marginBottom="16dp"
                    android:alpha="0.8"
                    android:background="@drawable/transparent_button_background"
                    android:padding="12dp"
                    android:text="Tìm Hiểu"
                    android:onClick="onEarthButtonClick"
                    android:textColor="#FFFF"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>

        <!-- Mercury Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/mercuryImage"
                    android:layout_width="380dp"
                    android:layout_height="180dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/tl_002"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintDimensionRatio="16:9"/>

                <TextView
                    android:id="@+id/mercuryTitleText"
                    android:layout_width="380dp"
                    android:layout_height="61dp"
                    android:padding="15dp"
                    android:text="Số và các kí hiệu toán học"
                    android:textColor="#FFFFFF "
                    android:textSize="18sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <Button
                    android:id="@+id/mercuryExploreButton"
                    android:layout_width="150dp"
                    android:layout_height="50dp"
                    android:layout_margin="16dp"
                    android:layout_marginStart="4dp"
                    android:layout_marginBottom="16dp"
                    android:alpha="0.8"
                    android:background="@drawable/transparent_button_background"
                    android:padding="12dp"
                    android:text="Tìm Hiểu"
                    android:onClick="onMercuryButtonClick"
                    android:textColor="#FFFF"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>

        <!-- Venus Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/venusImage"
                    android:layout_width="380dp"
                    android:layout_height="180dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/tl_001"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintDimensionRatio="16:9"/>

                <TextView
                    android:id="@+id/venusTitleText"
                    android:layout_width="380dp"
                    android:layout_height="61dp"
                    android:padding="15dp"
                    android:text="Thành lập câu"
                    android:textColor="#FFFFFF"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <Button
                    android:id="@+id/venusExploreButton"
                    android:layout_width="150dp"
                    android:layout_height="50dp"
                    android:layout_margin="16dp"
                    android:layout_marginStart="4dp"
                    android:layout_marginBottom="16dp"
                    android:alpha="0.8"
                    android:background="@drawable/transparent_button_background"
                    android:padding="12dp"
                    android:text="Tìm Hiểu"
                    android:onClick="onVenusButtonClick"
                    android:textColor="#FFFF"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>

        <!-- Mars Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/marsImage"
                    android:layout_width="380dp"
                    android:layout_height="180dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/tl_002"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintDimensionRatio="16:9"/>

                <TextView
                    android:id="@+id/marsTitleText"
                    android:layout_width="380dp"
                    android:layout_height="61dp"
                    android:padding="15dp"
                    android:text="Từ vựng"
                    android:textColor="#FFFFFF"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <Button
                    android:id="@+id/marsExploreButton"
                    android:layout_width="150dp"
                    android:layout_height="50dp"
                    android:layout_margin="16dp"
                    android:layout_marginStart="4dp"
                    android:layout_marginBottom="16dp"
                    android:alpha="0.8"
                    android:background="@drawable/transparent_button_background"
                    android:padding="12dp"
                    android:text="Tìm Hiểu"
                    android:onClick="onMarsButtonClick"
                    android:textColor="#FFFF"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>

        <!-- Saturn Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/saturnImage"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/saturn"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintDimensionRatio="16:9"/>

                <TextView
                    android:id="@+id/saturnTitleText"
                    android:layout_width="380dp"
                    android:layout_height="61dp"
                    android:padding="15dp"
                    android:text="Saturn and its magnificent rings"
                    android:textColor="#FFFFFF"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <Button
                    android:id="@+id/saturnExploreButton"
                    android:layout_width="226dp"
                    android:layout_height="59dp"
                    android:layout_margin="16dp"
                    android:layout_marginStart="4dp"
                    android:layout_marginBottom="16dp"
                    android:alpha="0.8"
                    android:background="@drawable/transparent_button_background"
                    android:padding="12dp"
                    android:text="Explore Saturn"
                    android:onClick="onSaturnButtonClick"
                    android:textColor="#FFFF"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>

        <!-- Uranus Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/uranusImage"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/uranus"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintDimensionRatio="16:9"/>

                <TextView
                    android:id="@+id/uranusTitleText"
                    android:layout_width="380dp"
                    android:layout_height="61dp"
                    android:padding="15dp"
                    android:text="Uranus, the tilted ice giant"
                    android:textColor="#FFFFFF"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <Button
                    android:id="@+id/uranusExploreButton"
                    android:layout_width="226dp"
                    android:layout_height="59dp"
                    android:layout_margin="16dp"
                    android:layout_marginStart="4dp"
                    android:layout_marginBottom="16dp"
                    android:alpha="0.8"
                    android:background="@drawable/transparent_button_background"
                    android:padding="12dp"
                    android:text="Explore Uranus"
                    android:onClick="onUranusButtonClick"
                    android:textColor="#FFFF"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>

        <!-- Neptune Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/neptuneImage"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/neptune"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintDimensionRatio="16:9"/>

                <TextView
                    android:id="@+id/neptuneTitleText"
                    android:layout_width="380dp"
                    android:layout_height="61dp"
                    android:padding="15dp"
                    android:text="Neptune, the farthest planet to the sun"
                    android:textColor="#FFFFFF"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <Button
                    android:id="@+id/neptuneExploreButton"
                    android:layout_width="226dp"
                    android:layout_height="59dp"
                    android:layout_margin="16dp"
                    android:layout_marginStart="4dp"
                    android:layout_marginBottom="16dp"
                    android:alpha="0.8"
                    android:background="@drawable/transparent_button_background"
                    android:padding="12dp"
                    android:text="Explore Neptune"
                    android:onClick="onNeptuneButtonClick"
                    android:textColor="#FFFF"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>
</ScrollView>